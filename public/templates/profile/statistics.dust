{#profile}
<ul class="stats">
  <li class="stats__item">
    {#trips}
      {trips}
    {:else}
      0
    {/trips}
    <span>{@pre type="content" key="trips"/}</span>
  </li>
  <li class="stats__item">
    {#followers}
      {followers}
    {:else}
      0
    {/followers}
    <span>{@pre type="content" key="followers"/}</span>
  </li>
</ul>
{/profile}

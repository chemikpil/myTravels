{#profile}
<ul class="stats">
  <li class="stats__item">
    {#travel_counts}
      {travel_counts}
    {:else}
      0
    {/travel_counts}
    <span>{@pre type="content" key="trips"/}</span>
  </li>
  <li class="stats__item">
    {#followers}
      {followers}
    {:else}
      0
    {/followers}
    <span>{@pre type="content" key="followers"/}</span>
  </li>
</ul>
{/profile}

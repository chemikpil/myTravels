<div class="cover cover--profile" style="background-image: url({user.cover_photo})">
  
  <img src="{user.gravatar}?s=170" alt="" class="user__avatar">
  
  <p class="user__name" data-empty='{@pre type="content" key="emptyName"/}'>{user.name}</p>
  
  <p class="user__location" data-empty='{@pre type="content" key="emptyLocation"/}'>{user.location}</p>
</div>